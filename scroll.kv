ScreenManager:
    Screen:
        BoxLayout:
            size_hint_x: .9
            size_hint_y: .8
            pos_hint: {'center_x': .5, 'center_y': .5}
            ScrollView:
                size: 800, 800
                pos_hint: {'center_x': .5, 'center_y': .5}
                do_scroll_x: False

                GridLayout:
                    cols: 2
                    padding_horizontal: 100
                    padding_vertical: 10
                    spacing: 20
                    height: self.minimum_height
                    row_force_default: True
                    row_default_height: 20
                    size_hint_y: None
                    id: container

<CustLabel@Label>
    size: self.texture_size
    size_hint_x: .4
    font_size: 12
    color: 1,1,1,1

<CustPBar@ProgressBar>
    height: '48dp'
    size_hint_x: .9
    max: 100

<ScrollButton>
    size_hint: None, None
    size: 480, 40


